class Solution:
    def reverse(self, x: int) -> int:
        if x >= 0:
            st = str(x);
            rst = st[::-1];
            result = int(rst);
            if result <= 2 ** 31 - 1:
                return result;
            else:
                return 0;
        else:
            st = str(-x);
            rst = st[::-1];
            result = -int(rst);
            if result >= -2 ** 31:
                return result;
            else:
                return 0;
